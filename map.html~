<!--This is the map page for the user where they are able to see the real time location of the food trucks -->
<html lang="en">
	<head>

		<title>Wai Mai</title>
		
		<meta name="viewport" content="initial-scale=1.0, width=device-width" />
		<script src="http://js.api.here.com/v3/3.0/mapsjs-core.js" type="text/javascript" charset="utf-8"></script>
		<script src="http://js.api.here.com/v3/3.0/mapsjs-service.js" type="text/javascript" charset="utf-8"></script>
	 	<script type="text/javascript" charset="UTF-8" src="https://js.api.here.com/v3/3.0/mapsjs-ui.js"></script>
		<script type="text/javascript" charset="UTF-8" src="https://js.api.here.com/v3/3.0/mapsjs-mapevents.js"></script>
 		 
		<meta name="keywords" content="chinese food, CMU, wai mai" />
		<meta name="author" content="Crystal" >
		<meta name="description" content="Alternative food options for CMU kids"/>
	  	<meta name="viewport" content="width=device-width, initial-scale=1">

	  	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
	    <meta http-equiv="content-language" content="en-us">

		<!-- set site icon <link rel="site icon" href=""> -->

	</head>
	<body>
	<div style="width: 400px; height: 500px" id="mapContainer" class="map"></div>
	<script>
			var mapContainer = document.getElementById('map-container');
			
			var platform = new H.service.Platform({
  			app_id: 'xZmxyj2SRvUqNP1Ea97y', 
  			app_code: 'bxRlLLx05eqG3_9St7H9pw'
			});

			var HEREHQcoordinates = {
  			// HERE HQ in Berlin, Germany:
  			lat: 40.440929,
  			lng: -79.944264
			};

			// Displaying the map
			var mapOptions = {
  			center: HEREHQcoordinates,
  			zoom: 15
			};

			var defaultLayers = platform.createDefaultLayers();

			var map = new H.Map(
  			document.getElementById('mapContainer'),
  			defaultLayers.normal.map,
  			mapOptions);

			// Resize the map when the window is resized
			window.addEventListener('resize', function () {
  			map.getViewPort().resize();
			});
			
			var behavior = new H.mapevents.Behavior(new H.mapevents.MapEvents(map));
	</script>
	</body>
</html>